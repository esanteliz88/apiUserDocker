        "helmet": "^8.1.0",
        "hpp": "^0.2.3",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.11.3",
        "sequelize": "^6.35.1",
        "xss-clean": "^0.1.4"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "jest": "^29.7.0",
