{
    "name": "usuarios-service",
    "version": "1.0.0",
    "description": "Microservicio de usuarios para el sistema de ventas",
    "type": "module",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.js",
        "dev": "nodemon src/index.js",
        "crear-superadmin": "node src/scripts/crearSuperAdmin.js",
        "seed-roles-permissions": "node src/scripts/seedRolesAndPermissions.js",
